// neuropia_api_gateway/package.json
{
  "name": "neuropia-api-gateway",
  "version": "1.0.0",
  "description": "Neuropia AI Platform - Business API Gateway",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:integration": "jest tests/integration/",
    "test:e2e": "jest tests/e2e/",
    "lint": "eslint src/ tests/",
    "docker:build": "docker build -t neuropia-api-gateway .",
    "docker:run": "docker run -p 3001:3001 neuropia-api-gateway"
  },
  "dependencies": {
    "express": "^4.18.2",
    "redis": "^4.6.7",
    "node-fetch": "^2.6.7",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "uuid": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.42.0",
    "@types/jest": "^29.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage"
  },
  "keywords": [
    "ai",
    "gateway",
    "api",
    "neuropia",
    "portkey"
  ],
  "author": "Neuropia Team",
  "license": "MIT"
}
