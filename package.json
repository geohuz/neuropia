{
  "private": true,
  "workspaces": [
    "neuropia_api_gateway",
    "neuropia_analytic_service",
    "neuropia_billing_worker",
    "shared",
    "tests"
  ],
  "scripts": {
    "dev:gateway": "dotenv -e .env -- npm run dev --workspace=neuropia_api_gateway",
    "dev:analytic": "dotenv -e .env npm run dev --workspace=neuropia_analytic_service",
    "dev:billing": "dotenv -e .env -- npm run dev --workspace=neuropia_billing_worker",
    "dev": "npm-run-all --parallel dev:gateway dev:analytic",
    "test:e2e": "jest tests/e2e/ --verbose",
    "test:integration": "jest tests/integration/ --verbose",
    "test": "npm run test:integration && npm run test:e2e"
  },
  "dependencies": {
    "@supabase/postgrest-js": "^2.84.0",
    "@supabase/realtime-js": "^2.86.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "node-fetch": "^2.6.7",
    "pg": "^8.16.3",
    "redis": "^5.6.7",
    "uuid": "^9.0.0",
    "winston": "^3.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "_moduleAliases": {
    "@shared": "shared"
  }
}
