CREATE FUNCTION api.create_api_key(p_user_id uuid) RETURNS text
    LANGUAGE plpgsql SECURITY DEFINER
    AS $$
DECLARE
    existing_id uuid;
    key_text text;
BEGIN
    -- ÁîüÊàêÈöèÊú∫ API key
    key_text := encode(gen_random_bytes(32), 'hex');

    -- Ê£ÄÊü•Áî®Êà∑ÊòØÂê¶Â∑≤Êúâ key
    SELECT id INTO existing_id 
    FROM data.api_key
    WHERE login_id = p_user_id;

    IF existing_id IS NULL THEN
        -- Ê≤°ÊúâÊóß keyÔºåÂàôÊèíÂÖ•Êñ∞ËÆ∞ÂΩï
        INSERT INTO data.api_key(login_id, api_key)
        VALUES (p_user_id, key_text)
        RETURNING id INTO existing_id;
    ELSE
        -- Â∑≤Êúâ keyÔºåÂàôÊõ¥Êñ∞
        UPDATE data.api_key
        SET api_key = key_text,
            updated_at = now()
        WHERE id = existing_id;
    END IF;

    RETURN key_text;
END;
$$;


