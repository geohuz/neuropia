--

CREATE FUNCTION api.get_virtualkey_config(p_virtual_key text) RETURNS jsonb
    LANGUAGE plpgsql SECURITY DEFINER
    AS $$
DECLARE
    vk record;
    final_config jsonb;
BEGIN
    -- Êü•ËØ¢ virtual_key
    SELECT *
    INTO vk
    FROM data.virtual_key
    WHERE virtual_key = p_virtual_key;

    -- 404: virtual_key ‰∏çÂ≠òÂú®
    IF NOT FOUND THEN
        RAISE EXCEPTION
            USING
                ERRCODE = 'P0001',
                MESSAGE = 'API key not found',
                DETAIL  = '',
                HINT    = 'Verify the api key before calling this API.';
    END IF;

    -- 400: virtual_key Êú™ÊøÄÊ¥ª
    IF vk.is_active = false THEN
        RAISE EXCEPTION
            USING
                ERRCODE = 'P0001',
                MESSAGE = 'API key is not active',
                DETAIL  = '',
                HINT    = 'Reactivate the api key to use this API.';
    END IF;

    -- ËÆ°ÁÆóÊúÄÁªà config
    final_config := data.refresh_virtual_key_computed_config(vk.id);

    -- 400: computed_config ÊòØÁ©∫ÂØπË±° {}
    IF final_config = '{}'::jsonb THEN
        RAISE EXCEPTION
            USING
                ERRCODE = 'P0001',
                MESSAGE = 'Configuration not found',
                DETAIL  = '',
                HINT    = 'ËØ• API Key Êú™ÈÖçÁΩÆ, ËØ∑ËÅîÁ≥ªÊîØÊåÅ„ÄÇ';
    END IF;

    -- ÂÜôÂõûËôöÊãü key Ë°®
    UPDATE data.virtual_key
    SET
        computed_config = final_config,
        updated_at = now()
    WHERE id = vk.id;

    RETURN final_config;
END;
$$;


