        IF NEW.scope_id IS NOT NULL THEN
            RAISE EXCEPTION 'Ê†πÂ±ÇÁ∫ß "%" ÁöÑ scope_id ÂøÖÈ°ª‰∏∫ NULLÔºåÂõ†‰∏∫ËøôÊòØÂÖ®Â±ÄÈÖçÁΩÆ', NEW.level_name;
        END IF;
    ELSE
        -- ÈùûÊ†πÂ±ÇÁ∫ßÔºöscope_id ÂèØ‰ª•‰∏∫ NULLÔºàÈªòËÆ§ÈÖçÁΩÆÔºâÊàñÂÖ∑‰ΩìÂÄºÔºàÁâπÂÆöÂÆû‰ΩìÈÖçÁΩÆÔºâ
        -- ‰∏çËøõË°åÈôêÂà∂ÔºåÂÖÅËÆ∏‰∏§ÁßçÊñπÂºè
    END IF;
    
    RETURN NEW;
