--
-- Name: get_gateway_limits(uuid, uuid); Type: FUNCTION; Schema: api; Owner: geohuz
--

CREATE FUNCTION api.get_gateway_limits(p_tenant_id uuid DEFAULT NULL::uuid, p_customer_type_id uuid DEFAULT NULL::uuid) RETURNS TABLE(soft_limit numeric, hard_limit numeric, soft_source text, hard_source text)
    LANGUAGE sql STABLE
    AS $$
  WITH config_priority AS (
    -- ÁßüÊà∑ÈÖçÁΩÆÔºàÂ¶ÇÊûúÊúâtenant_idÔºâ
    SELECT 
      control_value, 
      control_type, 
      1 as priority,
      'tenant' as source_type
    FROM data.gateway_control_config
    WHERE target_type = 'tenant'
      AND target_id = p_tenant_id
      AND control_type IN ('soft_limit', 'hard_limit')
      AND is_active = true

    UNION ALL

    -- ÂÆ¢Êà∑Á±ªÂûãÈÖçÁΩÆÔºàÂ¶ÇÊûúÊúâcustomer_type_idÔºâ
    SELECT 
      control_value, 
      control_type, 
      2 as priority,
      'customer_type' as source_type
    FROM data.gateway_control_config
    WHERE target_type = 'customer_type'
      AND target_id = p_customer_type_id
      AND control_type IN ('soft_limit', 'hard_limit')
      AND is_active = true

    UNION ALL

    -- ÂÖ®Â±ÄÈÖçÁΩÆ
    SELECT 
      control_value, 
      control_type, 
      3 as priority,
      'global' as source_type
    FROM data.gateway_control_config
    WHERE target_type = 'global'
      AND control_type IN ('soft_limit', 'hard_limit')
      AND is_active = true
  )
  SELECT 
    COALESCE(
      (SELECT control_value FROM config_priority WHERE control_type = 'soft_limit' ORDER BY priority LIMIT 1),
      10
    ) as soft_limit,
    
    (
      SELECT control_value FROM config_priority WHERE control_type = 'hard_limit' ORDER BY priority LIMIT 1
    ) as hard_limit,
    
    (
      SELECT source_type FROM config_priority WHERE control_type = 'soft_limit' ORDER BY priority LIMIT 1
    ) as soft_source,
    
    (
      SELECT source_type FROM config_priority WHERE control_type = 'hard_limit' ORDER BY priority LIMIT 1
    ) as hard_source;
$$;


