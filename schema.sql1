    PERFORM data.refresh_virtual_key_computed_config(r.virtual_key_id);

    -- ÈÄöÁü• Node.js Ê∏ÖÁºìÂ≠òÔºàpayload Áî® virtual_key_idÔºâ
    PERFORM pg_notify('virtual_key_config_changed', r.virtual_key_id::text);
  END LOOP;
