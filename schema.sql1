--

CREATE FUNCTION data.compute_config_for_user(p_node_id uuid, p_user_config jsonb) RETURNS jsonb
    LANGUAGE plpgsql
    AS $$
DECLARE
    v_node_config JSONB;
BEGIN
    -- Â¶ÇÊûúÊúâ primary_config_node_idÔºåËé∑ÂèñËØ•ËäÇÁÇπÁöÑ computed_config
    IF p_node_id IS NOT NULL THEN
