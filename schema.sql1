--
-- Name: complete_fund_operation_directly(uuid, text, text, numeric, text, text, uuid, text, text, jsonb); Type: FUNCTION; Schema: data; Owner: geohuz
--

CREATE FUNCTION data.complete_fund_operation_directly(p_user_id uuid, p_account_type text, p_transaction_type text, p_amount numeric, p_currency text DEFAULT 'USD'::text, p_reference_id text DEFAULT NULL::text, p_operator_id uuid DEFAULT NULL::uuid, p_operator_type text DEFAULT 'system'::text, p_description text DEFAULT NULL::text, p_metadata jsonb DEFAULT '{}'::jsonb) RETURNS data.fund_transactions
    LANGUAGE plpgsql
    AS $$
DECLARE
  v_account_balance_id UUID;
  v_balance_before NUMERIC;
  v_balance_after NUMERIC;
  v_fund_transaction data.fund_transactions%ROWTYPE;
BEGIN
  -- 1. ÂèÇÊï∞È™åËØÅ
  IF p_account_type NOT IN ('user', 'tenant') THEN
    RAISE EXCEPTION 'Êó†ÊïàÁöÑË¥¶Êà∑Á±ªÂûã: %', p_account_type;
  END IF;
  
  IF p_transaction_type NOT IN ('deposit', 'refund', 'adjustment') THEN
    RAISE EXCEPTION 'Êó†ÊïàÁöÑ‰∫§ÊòìÁ±ªÂûã: %', p_transaction_type;
  END IF;
  
  IF p_operator_type NOT IN ('system', 'admin', 'user') THEN
    RAISE EXCEPTION 'Êó†ÊïàÁöÑÊìç‰ΩúËÄÖÁ±ªÂûã: %', p_operator_type;
  END IF;
  
  -- 2. Ëé∑ÂèñË¥¶Êà∑‰ΩôÈ¢ùIDÂíåÂΩìÂâç‰ΩôÈ¢ùÔºàÂä†ÈîÅÔºâ
  SELECT 
    ab.id,
    ab.balance
  INTO v_account_balance_id, v_balance_before
  FROM data.account_balance ab
  WHERE 
    (p_account_type = 'user' AND ab.owner_userid = p_user_id) OR
    (p_account_type = 'tenant' AND ab.owner_tenantid = p_user_id)
  FOR UPDATE;
  
  IF v_account_balance_id IS NULL THEN
    RAISE EXCEPTION 'Ë¥¶Êà∑‰∏çÂ≠òÂú®: user_id=%, account_type=%', p_user_id, p_account_type;
  END IF;
  
  -- 3. ËÆ°ÁÆóÊñ∞‰ΩôÈ¢ù
  v_balance_after := v_balance_before + p_amount;
  
  -- 4. ÊèíÂÖ•ËµÑÈáëËÆ∞ÂΩï
  INSERT INTO data.fund_transactions (
    user_id,
    account_type,
    transaction_type,
    amount,
    currency,
    balance_before,
    balance_after,
    reference_id,
    operator_id,
    operator_type,
    description,
    metadata
  ) VALUES (
    p_user_id,
    p_account_type,
    p_transaction_type,
    p_amount,
    p_currency,
    v_balance_before,
    v_balance_after,
    p_reference_id,
    p_operator_id,
    p_operator_type,
    p_description,
    p_metadata
  )
  RETURNING * INTO v_fund_transaction;
  
  -- 5. Êõ¥Êñ∞Ë¥¶Êà∑‰ΩôÈ¢ù
  UPDATE data.account_balance 
  SET 
    balance = v_balance_after,
    updated_at = NOW()
  WHERE id = v_account_balance_id;
  
  -- 6. ÂèëÈÄÅ‰ΩôÈ¢ùÊõ¥Êñ∞ÈÄöÁü•ÔºàÊ®°ÊãüÁúüÂÆûÊµÅÁ®ãÔºâ
  PERFORM pg_notify(
    'account_balance_updated',
    json_build_object(
      'account_id', p_user_id,
      'account_type', p_account_type,
      'old_balance', v_balance_before,
      'new_balance', v_balance_after
    )::text
  );
  
  RETURN v_fund_transaction;
EXCEPTION
  WHEN check_violation THEN
    RAISE EXCEPTION '‰∏öÂä°ËßÑÂàôËøùÂèçÔºö%', SQLERRM;
  WHEN others THEN
    RAISE EXCEPTION 'ËµÑÈáëÊìç‰ΩúÂ§±Ë¥•Ôºö%', SQLERRM;
END;
$$;


